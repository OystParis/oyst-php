{
    "name": "API OneClick",
    "description": "Oyst API OneClick",
    "operations": {
        "AuthorizeOrder": {
            "httpMethod": "POST",
            "uri": "v1/orders/authorize",
            "summary": "Check if an order can be processed",
            "parameters": {
                "product_reference": {
                    "location": "json",
                    "type": "string",
                    "description": "The reference of the ordered product",
                    "required": true
                },
                "variation_reference": {
                    "location": "json",
                    "type": "string",
                    "description": "The sku reference of the ordered product",
                    "required": false
                },
                "quantity": {
                    "location": "json",
                    "type": "number",
                    "description": "The quantity of the ordered product",
                    "required": true
                },
                "user": {
                    "location": "json",
                    "type": "object",
                    "description": "The user who ordered the product",
                    "required": false
                },
                "version": {
                    "location": "json",
                    "type": "number",
                    "description": "Set the desired version of the one click process",
                    "required": false
                },
                "product": {
                    "location": "json",
                    "type": "object",
                    "description": "The product ordered for catalog less",
                    "required": false
                },
                "order_params": {
                    "location": "json",
                    "type": "object",
                    "sentAs": "order",
                    "description": "The order params",
                    "required": false
                },
                "context": {
                    "location": "json",
                    "type": "object",
                    "description": "Contextual elements about the order",
                    "required": false
                },
                "notifications": {
                    "location": "json",
                    "type": "object",
                    "description": "A bunch of notifications",
                    "required": false
                }
            }
        },
        "AuthorizeOrderV2": {
            "httpMethod": "POST",
            "uri": "v2/orders/authorize",
            "summary": "Check if an order can be processed",
            "parameters": {
                "context": {
                    "location": "json",
                    "type": "object",
                    "description": "Contextual elements about the order",
                    "required": false
                },
                "customization": {
                    "location": "json",
                    "type": "object",
                    "description": "Customize a CTA post order",
                    "required": false
                },
                "notifications": {
                    "location": "json",
                    "type": "object",
                    "description": "A bunch of notifications",
                    "required": false
                },
                "order_params": {
                    "location": "json",
                    "type": "object",
                    "sentAs": "order",
                    "description": "The order params",
                    "required": false
                },
                "products": {
                    "location": "json",
                    "type": "array",
                    "description": "An array of product",
                    "required": true
                },
                "user": {
                    "location": "json",
                    "type": "object",
                    "description": "The user who ordered the product",
                    "required": false
                }
            }
        }
    }
}
